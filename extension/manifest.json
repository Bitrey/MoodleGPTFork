{
  "manifest_version": 3,
  "name": "MoodleGPT",
  "version": "1.0.2",
  "description": "Hidden chat-gpt for your moodle quiz",
  "permissions": ["activeTab", "tabs", "storage"],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "./popup/index.html"
  },

  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*/**/mod/quiz/*",
        "*://*/mod/quiz/*",
        "http://localhost:*/*",
        "http://127.0.0.1:*/*",
        "file:///*"
      ],
      "js": ["MoodleGPT.js"],
      "run_at": "document_end"
    }
  ]
}
